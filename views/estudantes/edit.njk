{% extends 'layout.njk' %}

{% block head %}
    <title>Professores</title>
{% endblock %}

{% block content %}
<div class="card">
    <section class="avatar" style="background-image: url({{student.avatar_url}})"></section>
    <section class="details">

        <form id="form-put" method="POST" action="/estudantes?_method=PUT">

            <h3>Editar Estudante</h3>

            {% include 'estudantes/fields.njk' %}

            <input type="hidden" name="id" value={{student.id}}>
        </form>

        <form id="form-delete" action="/estudantes?_method=DELETE" method="post">
            <input type="hidden" name="id" value={{student.id}}>
            <button type="submit">Deletar</button>
        </form> 

    </section>
</div>

{% include 'confirm.njk' %}
    
{% endblock %}