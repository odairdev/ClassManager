{% extends 'layout.njk' %}

{% block head %}
    <title>Professores</title>
{% endblock %}

{% block content %}
<div class="card">
    <section class="avatar" style="background-image: url({{teacher.avatar_url}})"></section>
    <section class="details">

        <form id="form-put" method="POST" action="/professores?_method=PUT">

            <h3>Editar Professor</h3>

            {% include 'professores/fields.njk' %}

            <input type="hidden" name="id" value={{teacher.id}}>
        </form>

        <form id="form-delete" action="/professores?_method=DELETE" method="post">
            <input type="hidden" name="id" value={{teacher.id}}>
            <button type="submit">Deletar</button>
        </form> 

    </section>
</div>
    
{% endblock %}